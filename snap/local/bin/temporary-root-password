#!/bin/bash

cat $SNAP_DATA/log/mysql_error.log | grep -o "A temporary password is generated for root@localhost:.*"
echo "Change the MySQL root password using the following commands (replace 'YOUR_PASS' with a strong password):"
echo "- mysql-strict.mysql -u root -p"
echo "- ALTER USER 'root'@'localhost' IDENTIFIED WITH caching_sha2_password BY 'YOUR_PASS';"
echo "- exit"
